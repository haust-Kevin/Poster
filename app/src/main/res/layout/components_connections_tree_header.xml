<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUIConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
        android:id="@+id/iv_color"
        android:layout_width="6dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_corner_radius="3dp"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/tv_conn_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_color"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="QQbotçš„API" />

    <TextView
        android:id="@+id/tv_default_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="#59000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_conn_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="www.baidu.com" />

</com.qmuiteam.qmui.layout.QMUIConstraintLayout>